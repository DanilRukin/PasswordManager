@inject IDialogService DialogService

<MudPaper>
    <MudToolBar Style="height:150px;">
        <TapeSectionComponent SectionName="Базы"/>
        <MudDivider Vertical="true" FlexItem="true" />
        <TapeSectionComponent SectionName="Группы"/>
        <MudDivider Vertical="true" FlexItem="true" />
        <TapeSectionComponent SectionName="Записи"/>
        <MudDivider Vertical="true" FlexItem="true" />
        <MudGrid Style="min-width: 600px;" Class="flex-grow-4" Justify="Justify.Center">
            <MudItem xs="6" Class="d-flex align-center">
                <MudButton @onclick=OnGeneratorCall Class="align-self-center" Variant="Variant.Filled" Color="Color.Primary">Генератор</MudButton>                
            </MudItem>  
            <MudItem>
                <MudTextField T="string" Label="Поиск" Variant="Variant.Outlined" Adornment="Adornment.Start"
                              AdornmentIcon="@Icons.Material.Filled.Search" AdornmentColor="Color.Primary" />
            </MudItem>
            <MudItem xs="12">
                <MudText Align="Align.Center">
                    Прочее
                </MudText>
            </MudItem>
        </MudGrid>
    </MudToolBar>
</MudPaper>

@code{
    private void OnGeneratorCall()
    {
        DialogService.Show<PasswordManager.Presentation.Blazor.Dialogs.PasswordGeneratorDialog>("Генератор паролей");
    }
}

