
<MudGrid Justify="Justify.SpaceBetween">
    @*Иконка и название записи*@
    <MudItem xs="12" Style="text-align: center;">
        <MudIcon Icon="@Icons.Custom.Brands.GitHub" Title="GitHub" Size="Size.Large"/>
        <MudText>@Model.ResourceName</MudText>
    </MudItem>
    @*Основная информация по записи*@
    <MudItem xs="5">
        <MudText Align="Align.Right">Адрес ресурса</MudText>
    </MudItem>
    <MudItem xs="2"/>
    <MudItem xs="5">
        <MudText Align="Align.Left">@Model.ResourceName</MudText>
    </MudItem>

    <MudItem xs="5">
        <MudText Align="Align.Right">Имя пользователя</MudText>
    </MudItem>
    <MudItem xs="2" />
    <MudItem xs="5">
        <MudText Align="Align.Left">@Model.UserName</MudText>
    </MudItem>

    <MudItem xs="5">
        <MudText Align="Align.Right">Пароль</MudText>
    </MudItem>
    <MudItem xs="2"/>
    <MudItem xs="5">
        <MudText Align="Align.Left">@Model.ResourcePassword</MudText>
    </MudItem>

    <MudItem xs="5">
        <MudText Align="Align.Right">Дата создания</MudText>
    </MudItem>
    <MudItem xs="2" />
    <MudItem xs="5">
        <MudText Align="Align.Left">@Model.CreationDate</MudText>
    </MudItem>

    <MudItem xs="5">
        <MudText Align="Align.Right">Дата последнего доступа</MudText>
    </MudItem>
    <MudItem xs="2" />
    <MudItem xs="5">
        <MudText Align="Align.Left">@Model.LastAccessDate</MudText>
    </MudItem>

    <MudItem xs="5">
        <MudText Align="Align.Right">Дата последнего изменения</MudText>
    </MudItem>
    <MudItem xs="2" />
    <MudItem xs="5">
        <MudText Align="Align.Left">@Model.LastModifiedDate</MudText>
    </MudItem>


    @*Описание записи*@
    <MudItem xs="12">
        <MudTextField T="string" Label="Outlined" Variant="Variant.Outlined" Text="@Model.Description" ReadOnly="true" Lines="3" />
    </MudItem>   
</MudGrid>

